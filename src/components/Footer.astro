---
import NavIcon from './NavIcon.astro';

interface Navs {
    icon: 'github' | 'email' | 'setting';
    link: string;
    title?: string;
}

const nav: Navs[] = [
{
    icon: 'setting',
    link: '/setting',
    title: 'Setting'
}, {
    icon: 'github',
    link: 'https://github.com/anson2dev',
    title: 'View GitHub Profile'
}, {
    icon: 'email',
    link: 'mailto:anson@ctrlv.me',
    title: 'Send Email'
},];

---

<div class="fixed md:absolute bottom-0 left-0 right-0 w-full bg-black py-0">
    <div class="flex justify-between items-center px-8 py-2">
        <div class="flex gap-4">
            <!-- Start: Nav Links -->
                {nav.map(nav =>
                    <a
                        href={nav.link}
                        target="_blank"
                        title={nav.title}
                        rel="noopener noreferrer"
                        class="flex items-center justify-center w-8 h-8 rounded-lg bg-black text-gray-100 transition-all duration-150 border border-gray-600 hover:bg-primary hover:-translate-y-0.5">
                        <NavIcon icon={nav.icon} />
                    </a>
                )}
            
            <!-- End: Nav Links -->
        </div>
        <div class="text-sm">
            Copyright &copy; 2025 <a href="https://CtrlV.me" title="Astro" target="_blank" class="text-primary hover:underline">CtrlV.me</a> by <a href="http://anson.xyz/" target="_blank" title="Anson2Dev" class="text-primary hover:underline">Anson2Dev</a>
        </div>
    </div>
</div>
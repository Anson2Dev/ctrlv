---
import Layout from "../layouts/Layout.astro";
import Footer from "../components/Footer.astro";
---

<Layout>
  <!-- Start: Main Wrapper -->
  <main
    class="flex flex-col w-full max-w-full md:max-w-7xl border border-gray-600 rounded-2xl overflow-hidden shadow-2xl relative bg-black mb-12 md:mb-4"
  >
    <!-- Start: 404 Content -->
    <div
      class="p-8 md:p-12 flex flex-col items-center justify-center min-h-[80vh] text-center"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        width="96"
        height="96"
        viewBox="0 0 24 24"
        fill="none"
        stroke="currentColor"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
        class="text-primary mb-6"
      >
        <circle cx="12" cy="12" r="10"></circle>
        <path d="m15 9-6 6"></path>
        <path d="m9 9 6 6"></path>
      </svg>

      <h1 class="text-4xl font-extrabold mb-4 text-text-primary">404</h1>
      <p class="text-xl mb-6 text-gray-400">Page not found</p>
      <p class="text-md mb-8 text-gray-500 max-w-md">
        your requested page could not be found.
      </p>

      <a
        href="/"
        class="border border-primary hover:bg-primary/10 text-primary px-6 py-3 rounded-lg transition-colors flex items-center justify-center"
      >
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="18"
          height="18"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
          class="mr-2"
        >
          <path d="m12 19-7-7 7-7"></path>
          <path d="M19 12H5"></path>
        </svg>
        Back
      </a>
    </div>
    <!-- End: 404 Content -->

    <Footer />
  </main>
  <!-- End: Main Wrapper -->
</Layout>

<style>
  /* Keep styles consistent with the rest of the website */
  main {
    font-family: monospace;
  }

  .text-primary {
    color: var(--color-primary, #10b981);
  }

  .border-primary {
    border-color: var(--color-primary, #10b981);
  }

  .hover\:bg-primary\/10:hover {
    background-color: rgba(16, 185, 129, 0.1);
  }
</style>
